{% extends 'base.html.twig' %}

{% block title %}Basket index{% endblock %}

{% block body %}
    <h1>Basket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BuyDate</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.id }}</td>
                <td>{{ basket.buyDate ? basket.buyDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ basket.state ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_basket_show', {'id': basket.id}) }}">show</a>
                    <a href="{{ path('app_basket_edit', {'id': basket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_basket_new') }}">Create new</a>
{% endblock %}
