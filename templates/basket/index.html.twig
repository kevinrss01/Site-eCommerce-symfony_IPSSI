{% extends 'base.html.twig' %}

{% block title %}Basket index{% endblock %}

{% block body %}
    <h1>Votre panier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.state ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_basket_show', {'id': basket.id}) }}">Voir</a>
                    <a href="{{ path('app_basket_edit', {'id': basket.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun produit trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}">Ajouter des produits</a>
{% endblock %}
