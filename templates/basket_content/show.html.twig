{% extends 'base.html.twig' %}

{% block title %}BasketContent{% endblock %}

{% block body %}
    <h1>BasketContent</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ basket_content.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ basket_content.quantity }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ basket_content.date ? basket_content.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_basket_content_index',{'user': app.user.id}) }}" class="btn btn-outline-primary">back to list</a>
    
    <a href="{{ path('app_basket_content_edit', {'id': basket_content.id}) }}" class="btn btn-outline-info">edit</a>
{% endblock %}
