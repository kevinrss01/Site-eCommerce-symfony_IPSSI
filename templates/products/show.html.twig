{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
	<style>
		.containerBtn {display: flex}
		.containerBtn a { margin-right: 5px }
	</style>
	<h1>Produit</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ product.prix }}</td>
			</tr>
			<tr>
				<th>Stock</th>
				<td>{{ product.stock }}</td>
			</tr>
			<tr>
				<th>Photo</th>
				<td>
					{% if product.photo is not null %}
						<img src="{{asset('/uploads/'~product.photo)}}" alt="{{product.name}}" style="max-width: 70px">
					{% endif %}
				</td>
			</tr>
		</tbody>
	</table>
	<div class="containerBtn">
		<a class="btn btn-outline-primary" href="{{ path('app_products_index') }}">Retour</a>
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('app_products_edit', {'id': product.id}) }}" class="btn btn-outline-info">Modifier</a>
			<form method="post" action="{{ path('app_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
				<button class="btn btn-outline-danger">Delete</button>
			</form>
		{% endif %}
		<a class="btn btn-outline-secondary" href="{{ path('app_basket_content_new') }}">Ajouter au panier</a>
	</div>
{% endblock %}
