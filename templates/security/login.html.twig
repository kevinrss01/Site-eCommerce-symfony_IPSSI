{% extends 'base.html.twig' %}

{% block title %}{{ 'login.login'|trans }}{% endblock %}

{% block body %}`
    <style>
        .loginBtn {margin: 10px;}
        label { margin-top: 10px }
        h1 {text-align: center}
    </style>
    <div class="pageFormRegisterAndLogin">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}<br/>@Mot de passe ou email invalide ‚ùå</div>
        {% endif %}
        <form method="post">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{{ 'login.message1'|trans }}</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">{{ 'login.password'|trans }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div style="display: flex; justify-content: space-between; align-items: center">
                <button class="btn btn-lg btn-primary loginBtn" type="submit">
                    {{ 'login.login'|trans }}
                </button>
                <a  style="height: 40px; text-align: center" class="btn btn-secondary" href="{{ path('app_register') }}">{{ 'login.no_account'|trans }}</a>
            </div>

        </form>
    </div>
{% endblock %}
